{
  "name": "screen-time-mcp",
  "version": "1.0.0",
  "description": "MCP server for Screen Time on macOS - view app usage and set limits via the Model Context Protocol",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "screen-time-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "mcp",
    "screen-time",
    "macos",
    "model-context-protocol",
    "ai",
    "claude"
  ],
  "author": "Thomas Vincent",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^20.10.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.4.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.18.0",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ]
}
